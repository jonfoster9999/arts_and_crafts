<h1>Welcome, please sign up!</h1>

<%= form_for @user, :url => create_new_user_path, :method => :post do |f| %>
<%= f.label :name %>
<%= f.text_field :name %><br>
<%= f.label :email %>
<%= f.text_field :email %><br>
<%= f.label :password %>
<%= f.password_field :password %><br>
<%= f.submit "Sign up!" %>
<% end %>